<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.Chitietsanpham">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarctsp"
        android:background="#D8D8CA"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageviewctsp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/textviewtenctsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Tên Cafe"
                android:textColor="#ff00"
                android:textSize="20sp"
                />

            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/textviewgiactsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Gía sản phẩm"
                android:textColor="#9e0e3caf"
                android:textSize="18sp" />

            <Spinner
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttongiohang"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/cart1"
        android:textColor="#04ff00" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#1373BF"
            android:textSize="25sp"
            android:text="Mô Tả Sản Phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
              android:layout_marginVertical="15dp"
                android:textSize="20sp"
                android:id="@+id/textviewmotactsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>


